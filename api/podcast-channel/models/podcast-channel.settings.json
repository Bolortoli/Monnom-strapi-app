{
  "kind": "collectionType",
  "collectionName": "PodcastChannel",
  "info": {
    "name": "PodcastChannel",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "content_maker_id": {
      "plugin": "admin",
      "model": "user"
    },
    "cover_pic": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "podcast_episodes": {
      "via": "podcast_channel",
      "collection": "podcast-episode"
    }
  }
}
